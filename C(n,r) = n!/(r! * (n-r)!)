import java.util.*;


class Main {
  public static void main(String[] args) {

    int n;
    int kom;
     int r;
    
    int toplam1 = 1;
    int toplam2=1;
    int toplam3 =1;
    
      
  
    
    int farkSayi;
   Scanner scan =new Scanner(System.in);
    System.out.println("N kümesinin sayısını giriniz");
         
      n=scan.nextInt();

       for (int  i =1 ; i<=n ; i++ ){
        toplam1=toplam1*i;
       
    System.out.println("N kümesinin faktöriyeli "+toplam1);
       }
    
    Scanner scan1 =new Scanner(System.in);
    System.out.println("R kümesinin sayısını giriniz");
      r=scan1.nextInt();   
        for (int  b =1 ; b<=r ; b++ ){
        
         toplam2=toplam2*b;    
          
     System.out.println(" R kümesinin faktöriyeli " +toplam2);
        }
      
         
        
      
   
      farkSayi= (n-r);
    for (int c =1; c<=(farkSayi); c++){   
       toplam3=toplam3*c;
         
    System.out.println("Farklarının faktöriyeli" +toplam3);
    
      
    
  }
  
    kom=(toplam1)/((toplam2)*(toplam3));
      System.out.println("Kombinasyon Değiri    " + kom);
         
      
          
         
         
    
